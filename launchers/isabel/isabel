#-----------------------------------------------------
# isabel directory.
#-----------------------------------------------------
if [ -z "$ISABEL_DIR" ] ; then
  ISABEL_DIR=/usr/local/isabel
  export ISABEL_DIR
fi

#-----------------------------------------------------
# isabel common code
#-----------------------------------------------------
. $ISABEL_DIR/bin/isabel.common.sh

#-----------------------------------------------------
# isabel environment variables
#-----------------------------------------------------
. $ISABEL_DIR/bin/isabel.environ.sh


#-----------------------------------------------------
# Start the server tunnel
#-----------------------------------------------------
#$ISABEL_DIR/bin/startServerTunnel.sh $@ > $ISABEL_LOGS_DIR/startServerTunnel.log 2>&1 &

JARLIB=$ISABEL_DIR/libexec/isabel_lib.jar
JARTUN=$ISABEL_DIR/libexec/isabel_networkmanager.jar:$ISABEL_DIR/libexec/isabel_tunnel.jar:$ISABEL_DIR/libexec/isabel_xlimservices.jar
XMLRPCJARS=$ISABEL_DIR/libexec/xmlrpc/commons-logging-1.1.jar:$ISABEL_DIR/libexec/xmlrpc/ws-commons-util-1.0.2.jar:$ISABEL_DIR/libexec/xmlrpc/xmlrpc-client-3.1.jar:$ISABEL_DIR/libexec/xmlrpc/xmlrpc-common-3.1.jar:$ISABEL_DIR/libexec/xmlrpc/xmlrpc-server-3.1.jar

JARS=$JARLIB:$JARTUN:$XMLRPCJARS

_nmslogfn=$ISABEL_LOGS_DIR/NetworkManagerServer.log

echo "--- Launching NetworkManagerServer $(date)" > $_nmslogfn

java -cp $JARS \
     -Dprior.config.file=$ISABEL_DIR/lib/xlimconfig/priorxedl.cfg \
     -Disabel.dir=$ISABEL_DIR \
     -Disabel.profiles.dir=$ISABEL_PROFILES_DIR \
     -Disabel.sessions.dir=$ISABEL_SESSIONS_DIR \
     -Disabel.user.dir=$ISABEL_USER_DIR \
     -Disabel.config.dir=$ISABEL_CONFIG_DIR \
     -Disabel.logs.dir=$ISABEL_LOGS_DIR \
     -Disabel.tmp.dir=$ISABEL_TMP_DIR \
     networkManager.isabel.NetworkManagerServer >> $_nmslogfn 2>&1 &


#-----------------------------------------------------
# Calls xedl_launcher if the first argument is a xedl file.
#-----------------------------------------------------
_arg1_ext=$(echo $1 | tr A-Z a-z | egrep ".*\.xedl$")
if [ "$?" = 0 ] ; then
   exec $ISABEL_DIR/bin/xedl_launcher $@
fi
unset _arg1_ext


#-----------------------------------------------------
# Calls icto_launcher if the first argument is a icto (isabel connect to) file.
#-----------------------------------------------------
_arg1_ext=$(echo $1 | tr A-Z a-z | egrep ".*\.icto$")
if [ "$?" = 0 ] ; then
   exec $ISABEL_DIR/bin/icto_launcher $@
fi
unset _arg1_ext

#-----------------------------------------------------
# Calls xlim_launcher.
#-----------------------------------------------------

_ilogfn=$(CreateLogFilename xlim_launcher)

exec $ISABEL_DIR/bin/xlim_launcher $@ > $_ilogfn 2>&1

