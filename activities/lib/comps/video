#--------------------------------------------------------------------
# Component: Video
#--------------------------------------------------------------------

Video.whatis:        component    

Video.otherlayout:   
Video.othermap:      0

Video.ctrlsites:     Ctrl

Video.conftables:    video vga

Video.vga.enabled:    0
Video.lse.enabled:    0

#Video.FEC.K:         6

#--------------------------------------------------------------------

# Multiplos de 16:
#
#    64x48  128x96  192x144  256x192  320x240  384x288 448x336  512x384
#  575x432 640x480  704x528  768x576
#

#--------------------------------------------------------------------

Video.conftable.video: \
  {geometry=64x48   bw=0    {codec=MPEG-4 -qlty=0} grabsize=0 framerate=25} \
  {geometry=640x480 bw=0    {codec=MPEG-4 -qlty=0} grabsize=0 framerate=25}

#--------------------------------------------------------------------

Video.conftable.vga: \
  {geometry=64x48    bw=0    {codec=MPEG-4 -qlty=0} grabsize=0        framerate=25} \
  {geometry=640x480  bw=0    {codec=MPEG-4 -qlty=0} grabsize=640x480  framerate=25} \
  {geometry=800x600  bw=0    {codec=MPEG-4 -qlty=0} grabsize=1024x768 framerate=10} \
  {geometry=1024x768 bw=0    {codec=MPEG-4 -qlty=0} grabsize=1024x768 framerate=10}

#--------------------------------------------------------------------
